{{> body_inicio}}

    <main id="main">
       <h3 class="text-secondary">Renombrar un Archivo</h3>
    
       <form action="/renombrararchivos" method="post">

            <select class="form-select" aria-label="Default select example" name="archivoALeer">
                {{#each ArchivoCreados}}
                    <option> {{this}}</option>
                {{/each}}
            </select>

             <div class="mb-3">
                <label for="nuevoNombre" class="form-label text-secondary">Ingrese el nuevo nombre</label>
                <input type="text" class="form-control" id="nuevoNombre" name="nuevoNombre" placeholder="Nuevo nombre" required>
            </div>
           
            <button type="submit" class="btn btn-secondary mt-3">Renombrar Archivo</button>

       </form>

        {{#if mensaje}}
            <h4 class="text-secondary mt-5">{{mensaje}}</h4>                
        {{/if}}

    </main>    

{{> body_fin}}